<Window x:Name="window" x:Class="Source.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Source"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="42">
    <StackPanel>
        <Button Click="ClickBtn_Click_5" Name="ClickBtn">Click</Button>
        <TextBox Name="txtBox" MaxHeight="{Binding ActualHeight, ElementName=window, Mode=OneWay}"></TextBox>
    </StackPanel>
</Window>
